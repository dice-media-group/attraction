<body class="bg-color">
  <div class="section _100vh align-center is-header">
    <div class="container">
      <div class="col lg-1"></div>
      <div class="col lg-6 on-dark sm-12 padding-top-bottom-48">
        <div class="pre-title on-dark">Social media management, simplified</div>
        <h1 class="on-dark heading-beta">Manage all your social media in one place</h1>
        <div>
          <div class="margin-bottom">From finding prospects to serving customers, Zain helps you do more with your social media.</div>
          <a href="#" class="button-primary button-ghost-on-dark w-inline-block">
            <div class="button-primary-text">get started</div>
          </a>
        </div>
        <div class="bg-divider"></div>
      </div>
      <div class="col lg-1 no-margin-bottom"></div>
      <div class="col lg-3 md-12 md-on-dark">
        <div>
          <h2>Sign up</h2>
          <div class="text-medium margin-bottom">create your account for free or 
            <%= link_to "sign in", new_user_session_path %>
          </div>
          <div class="w-form">
            <%= render partial: 'registration_sign_up_form' %>
            <div class="w-form-done">
              <div>Thank you! Your submission has been received!</div>
            </div>
            <div class="w-form-fail">
              <div>Oops! Something went wrong while submitting the form.</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col lg-1"></div>
    </div>
  </div>
  <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.4.1.min.220afd743d.js" type="text/javascript" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="js/webflow.js" type="text/javascript"></script>
  <!-- [if lte IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif] -->
  <script>
    var Webflow = Webflow || [];
    Webflow.push(function () {
      // DOMready has fired
      // May now use jQuery and Webflow api
// start everything
      var tabTimeout;
      clearTimeout(tabTimeout);
      tabLoop();
    // define loop - cycle through all tabs
    function tabLoop() {
        tabTimeout = setTimeout(function() {
            var $next = $('.c-tabslider1__tab-menu').children('.w--current:first').next();
            if($next.length) {
                $next.click();  // click resets timeout, so no need for interval
            } else {
                $('.c-tabslider1__tab-link:first').click();
            }
        }, 2000);  // 2 second tab loop
    }
    // reset timeout if a tab is clicked
    $('.c-tabslider1__tab-link').click(function() {
        clearTimeout(tabTimeout);
        tabLoop();
        });
    });
</script>
