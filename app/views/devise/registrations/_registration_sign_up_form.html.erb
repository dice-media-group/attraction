            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <label for="name" class="form-label">Name</label>

  <%= f.text_field :name, autofocus: true, class: 'form-input-text margin-bottom w-input',  maxlength: "256", placeholder: "Full Name", data: {name: "Name"} %>



<!--  -->
<!-- <form id="email-form" name="email-form" data-name="Email Form"> -->

	<!-- <input type="text" class="form-input-text margin-bottom w-input" maxlength="256" name="name" data-name="Name" id="name"> -->

	<label for="email" class="form-label">Email Address</label>
	<%= f.email_field :email, 
					  autofocus: false, 
					  data: {name: "Email"},
					  maxlength: "256",
					  class: 'form-input-text margin-bottom w-input', 
					  placeholder: "Email Address" %>


	<label for="email-2" class="form-label">Password</label>
	<%= f.password_field :password, 
						  data: {name: "Email 2"},
						  autocomplete: "off",
						  maxlength: "256",
						  class: 'form-input-text margin-bottom w-input', 
						  placeholder: 'Password' %>

	<label for="email-2" class="form-label">Password Confirmation</label>
    <%= f.password_field :password_confirmation, 
    					autocomplete: "off", 
						maxlength: "256",
						class: 'form-input-text margin-bottom w-input', 
    					placeholder: 'Confirm Password' %>

	<label class="w-checkbox">
	<input type="checkbox" id="checkbox" name="checkbox" data-name="Checkbox" class="w-checkbox-input form-checkbox">
	
	<span class="margin-bottom w-form-label">I agree to the <a href="#">terms &amp; service</a></span>
	</label>
	<input type="submit" value="Create Account" data-wait="Please wait..." class="button-primary w-button">
		
<!-- </form> -->
            <% end %>
